<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="310px"
             android:layout_height="202px"
             android:orientation="vertical"
             android:paddingLeft="8px"
             android:paddingRight="8px"
             android:background="@drawable/effect_plain_v2">

    <TextView
        android:id="@+id/effect_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="15px"
        android:maxLines="2"
        android:minLines="2"
        android:textSize="22px"
        android:alpha="0.6"
        android:text="Long Hero Name Of Many Many Have We Crawled"
        android:textColor="@android:color/white"/>

    <ImageView
        android:layout_width="100px"
        android:layout_height="1px"
        android:layout_gravity="center"
        android:layout_marginTop="5px"
        android:layout_marginBottom="5px"
        android:alpha="0.6"
        android:background="@android:color/white"/>

    <TextView
        android:id="@+id/effect_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="4px"
        android:layout_marginRight="4px"
        android:layout_marginBottom="8px"
        android:textSize="14px"
        android:textColor="@android:color/white"
        android:alpha="0.6"
        android:text="Long Hero Name Of Many Many Have We CraLong Hero Name Of Many Many Have We CraLong Hero Name Of Many Many Have We CraLong Hero Name Of Many Many Have We CraLong Hero Name Of Many Many Have We Crawled"/>


</LinearLayout>
