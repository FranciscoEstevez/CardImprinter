<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <Button
        android:id="@+id/load_all_btn"
        android:text="@string/load_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <include
                android:id="@+id/card_hero_include"
                layout="@layout/card_hero"
                android:layout_width="310px"
                android:layout_height="202px"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <include
                android:id="@+id/card_skill_include"
                layout="@layout/card_skill"
                android:layout_width="202px"
                android:layout_height="310px"/>

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <include
                android:id="@+id/card_monster_include"
                layout="@layout/card_monster"
                android:layout_width="202px"
                android:layout_height="310px"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">

            <include
                android:id="@+id/card_effect_include"
                layout="@layout/card_effect"
                android:layout_width="310px"
                android:layout_height="202px"/>

        </FrameLayout>


    </LinearLayout>

</LinearLayout>
